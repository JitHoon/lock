extends ../base

block content
    div
        p=question.content
        small=question.createdAt

    div
        small Uploaded by #{question.owner.userName}

    if String(question.owner.id) === String(loggedInUser._id)
        div.arrow-switch
            a(href=`${question.id}/editq`) 수정하기 &rarr;
        div.arrow-switch
            a(href=`${question.id}/delete`) 삭제하기 &rarr;