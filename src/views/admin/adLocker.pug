extends ../base

block content
    div.locker__relative
        p.locker__title2 | 사물함 비밀번호 변경시 주의사항 |
        p.locker__notice3 오프라인 사물함 비밀번호를 먼저 변경 한 후
        p.locker__notice3 온라인 사물함 비밀번호를 변경하세요.

    div.form
        div.profile__shape2
            div.profile__data
                P= locker.lockerNum 

            div.profile__data
                h1 사물함 비밀번호
                p=locker.lockerPW

            if locker.available
                div.profile__data
                    p 사용자 없음
            else 
                div.profile__data
                    h1 사용자
                    p= locker.owner.userName
                div.profile__data
                    h1 학번
                    p= locker.owner.studentID
                div.profile__data
                    h1 전화번호
                    p= "0" + locker.owner.phoneNumber
                    h1.profile__data--error 사물함 반납 기한
                    p= locker.owner.returnDate.toISOString().substr(0, 10)

    a(href=`/admin/${_id}/dblocker/${locker._id}/changepw`).homeCard__shape
        span.PW__change= locker.lockerNum + " 사물함 비밀번호 변경"
