extends ../base

block content
    if errorMessage
        span.error-message=errorMessage

    form(method="post")
        input(name="oldPW", placeholder="이전 비밀번호", type="password", required)
        input(name="newPW1", placeholder="새비밀번호", type="password", required)
        input(name="newPW2", placeholder="새비밀번호 재확인", type="password", required)
        input(value="비밀번호 변경", type="submit")